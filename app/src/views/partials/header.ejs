<div class="row header">
    <a href="/menu" class="col-2 col-s-2 header-link"> <h3 class="header-titulo">RPG Web</h3> </a>
    <div class="col-8 col-s-0"></div>
    <% if (typeof save !== 'undefined' && save.atributos) { %>
        <div class="col-2 col-s-2 header-link">
            <button onclick="location.href='/saves'" class="header-logout"> Trocar de Save </button>
            <button class="header-logout btn-logout-toggle"> Logout </button>
            <form action="/logout" method="POST" class="logout-form opcoes-save">
                <button type="submit"> Confirmar Logout </button>
            </form>
            <form action="/excluirUser" method="POST" class="logout-exclusao-form opcoes-save">
                <button type="submit"> Logout e Exclus√£o</button>
            </form>
        </div>
    <% } %>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btnLogout = document.querySelector('.btn-logout-toggle');
        const logoutForm = document.querySelector('.logout-form');
        const exclusaoForm = document.querySelector('.logout-exclusao-form');

        btnLogout.addEventListener('click', () => {
            logoutForm.classList.toggle('opcoes-save');
            exclusaoForm.classList.toggle('opcoes-save');
        });
    });
</script>