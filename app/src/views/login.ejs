<html lang="pt-br">
<head>
    <%- include('partials/head') %>
</head>
<body>
<div class="row">
    <div class="col-4 col-s-2"></div> 

    <div class="col-4 col-s-8">
    <h1> Login </h1>
    <form action="/login" method="POST" novalidate class="form-login">
        <fieldset>
                        
            <label> Autenticação do usuário </label>
            <input type= "text" name= "email" placeholder="Nome de usuário/e-mail...">

            <label> Senha </label>
            <input type="password" name="senha" placeholder="Digite a sua senha...">

            <label> Confirmar Senha </label>
            <input type="password" name="confirmarSenha" placeholder="Confirme a sua senha...">
            
            <button type="submit"> Criar Cadastro </button>
            
        </fieldset>
    </form>
    <div class="col-4 col-s-2"></div>

    <%- include('partials/footer') %>
</body>
<script>
    setInterval(() => location.reload(), 2000);
</script>
</html>